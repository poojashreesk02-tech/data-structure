#include <stdio.h>
#include <stdlib.h>

int main() {
    int *ptr, *new_ptr;
    int n, i;

    // --- Using malloc() ---
    printf("Enter number of elements: ");
    scanf("%d", &n);

    ptr = (int*) malloc(n * sizeof(int));

    if (ptr == NULL) {
        printf("Memory not allocated.\n");
        return 1;
    }

    printf("\nMemory successfully allocated using malloc.\n");

    printf("Enter %d integers:\n", n);
    for (i = 0; i < n; ++i) {
        scanf("%d", &ptr[i]);
    }

    printf("You entered (malloc): ");
    for (i = 0; i < n; ++i) {
        printf("%d ", ptr[i]);
    }
    printf("\n");

    // --- Using calloc() ---
    printf("\nNow allocating memory using calloc for %d elements...\n", n);
    int *ptr2 = (int*) calloc(n, sizeof(int));

    if (ptr2 == NULL) {
        printf("Memory not allocated.\n");
        free(ptr);
        return 1;
    }

    printf("Memory successfully allocated using calloc (initialized to 0):\n");
    for (i = 0; i < n; ++i) {
        printf("%d ", ptr2[i]);
    }
    printf("\n");

    // --- Using realloc() ---
    printf("\nEnter new size of array: ");
    int new_n;
    scanf("%d", &new_n);

    new_ptr = (int*) realloc(ptr, new_n * sizeof(int));

    if (new_ptr == NULL) {
        printf("Memory not reallocated.\n");
        free(ptr);
        free(ptr2);
