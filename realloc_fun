#include <stdio.h>
#include <stdlib.h>

int main() {
    int *ptr;
    int n, new_n, i;

    // Step 1: Allocate initial memory using malloc
    printf("Enter initial number of elements: ");
    scanf("%d", &n);

    ptr = (int*) malloc(n * sizeof(int));

    if (ptr == NULL) {
        printf("Memory not allocated.\n");
        return 1;
    }

    printf("\nMemory successfully allocated using malloc.\n");

    // Step 2: Input initial elements
    printf("Enter %d integers:\n", n);
    for (i = 0; i < n; ++i) {
        scanf("%d", &ptr[i]);
    }

    printf("\nYou entered: ");
    for (i = 0; i < n; ++i) {
        printf("%d ", ptr[i]);
    }
    printf("\n");

    // Step 3: Resize memory using realloc
    printf("\nEnter new size of array: ");
    scanf("%d", &new_n);

    ptr = (int*) realloc(ptr, new_n * sizeof(int));

    if (ptr == NULL) {
        printf("Memory not reallocated.\n");
        return 1;
    }

    // If size increased, input new elements
    if (new_n > n) {
        printf("\nEnter %d new elements:\n", new_n - n);
        for (i = n; i < new_n; ++i) {
            scanf("%d", &ptr[i]);
        }
    }

    // Step 4: Display final array
    printf("\nFinal array elements: ");
    for (i = 0; i < new_n; ++i) {
        printf("%d ", ptr[i]);
    }
    printf("\n");

    // Step 5: Free memory
